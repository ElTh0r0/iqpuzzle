# Maintainer: Thorsten Roth <elthoro@gmx.de>
pkgname=iqpuzzle
pkgver=1.0.2
_mainver=1.0
pkgrel=1
pkgdesc='iQPuzzle is a diverting and challenging pentomino puzzle.'
arch=('i686' 'x86_64')
url='https://launchpad.net/iqpuzzle/'
license=('GPL3')
depends=('qt5-base')
source=("https://launchpad.net/iqpuzzle/$_mainver/$pkgver/+download/iqpuzzle-$pkgver-src.tar.gz")
md5sums=('0dd5576d1e4a54cacc376347911aa533')

build() {
    cd "$srcdir/$pkgname-$pkgver-src"
    qmake-qt5
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver-src"
    INSTALL_ROOT=$pkgdir make install
}

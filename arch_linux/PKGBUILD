# Maintainer: Thorsten Roth <elthoro@gmx.de>
pkgname=iqpuzzle
pkgver=1.0.5
pkgrel=1
pkgdesc='iQPuzzle is a diverting and challenging pentomino puzzle.'
arch=('i686' 'x86_64')
url='https://github.com/ElTh0r0/iqpuzzle/'
license=('GPL3')
depends=('qt5-base')
source=("https://github.com/ElTh0r0/iqpuzzle/archive/v$pkgver.tar.gz")
md5sums=('9b1cb5078483d5d88542d210c56d0bee')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    qmake-qt5
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    INSTALL_ROOT=$pkgdir make install
}

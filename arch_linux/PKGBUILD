# Maintainer: Thorsten Roth <elthoro@gmx.de>
pkgname=iqpuzzle
pkgver=1.1.1
pkgrel=1
pkgdesc='iQPuzzle is a diverting and challenging pentomino puzzle.'
arch=('x86_64')
url='https://github.com/ElTh0r0/iqpuzzle/'
license=('GPL3')
depends=('qt5-base')
source=("$pkgname-$pkgver.tar.gz")
md5sums=('f844bc0f4426e931b48241dc3e14b252')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    qmake-qt5
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    INSTALL_ROOT=$pkgdir make install
}
